# Database (see drizzle.config.ts)
DATABASE_URL=postgresql://user:pass@localhost:5432/dbname

# Redis (for BullMQ screencast queue)
REDIS_URL=redis://localhost:6379

# Screencast worker (optional)
SCREENCAST_MAX_DURATION=600
# Bgaming: try ".replay-controls button" or add selector from DevTools
# SCREENCAST_PLAY_SELECTORS=["[class*='replay'] button", "button"]
# SCREENCAST_END_SELECTORS=["button:has-text('Play again')", ".replay-complete"]

# Cloudflare R2 (S3-compatible)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=content-generator
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
